<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/signup.css" />

    <body>
      <h2>Sign-up Page</h2>
      <form action="/user/create" method="post">
        Name :
        <input
          type="text"
          name="name"
          required
          placeholder="Name"
          class="name-email"
        />
        <br />
        Email :
        <input
          type="text"
          name="email"
          required
          placeholder="Email"
          class="name-email"
        />
        <br />
        Password :
        <input
          type="text"
          name="password"
          required
          placeholder="Password"
          style="padding: 4px"
        /><br />
        <button type="submit">Sign-up</button>
      </form>

      <a href="/user/signin">
        <button id="signin">Sign In</button>
      </a>
    </body>
  </head>
</html>
